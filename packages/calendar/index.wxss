.calendar {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: #fff;
  font-size: 32rpx;
}
.away-top {
  height: 30rpx;
  background: #eee;
}
.time-top {
  display: flex;
  justify-content: space-around;
  line-height: 100rpx;
  font-size: 30rpx;
}
.left-btn, .right-btn {
  padding: 0 30rpx;
  font-size: 45rpx;
}
.weekName{
  width: 100%;
  display: flex;
  padding: 16rpx 0;
}
.weekName view{
  flex: 1;
  text-align: center;
}
.sunday,.saturday{
  color: #e40011;
}
.week{
  width: 100%;
}
.week view{
  width: 14.2%;
  line-height: 80rpx;
  display: inline-block;
  margin: 20rpx 0;
  text-align: center;
}
.week view text{
  width: 100%;
  height: 100%;
  display: inline-block;
}
.calendarSign{
  margin: 20rpx;
}
.click {
  color: #fff;
  background: #e40011;
  border-radius: 40rpx;
}
.disabled {
  display: none; 
}
.discover {
  position: absolute;
  font-size: 30rpx;
  background: #e40011;
  color: #fff;
  line-height: 100rpx;
  width: 100vw;
  bottom: 0;
  border-radius: 0;
}
.btn-cancel, .btn-confirm {
  position: absolute;
  bottom: 0;
  width: 50vw;
  line-height: 100rpx;
  font-size: 30rpx;
  display: inline-block;
  border-radius: 0;
}
.btn-cancel {
  background: #fff;
}
.btn-confirm {
  background: #e40011;
  color: #fff;
  right: 0;
}
button::after {
  border: none;
}
.btn-active-cancel {
  background: #f7f7f7;
}
.btn-active-confirm {
  background: #b8000e;
}
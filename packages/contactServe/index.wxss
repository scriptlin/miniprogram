.contactServe {
  position: absolute;
  top: 0;
  bottom: 0;
  z-index: 100;
}
.contact-btn{
	width: 180rpx;
	height: 60rpx;
	line-height: 60rpx;
	background: rgba(0,0,0,.5);
	color: #fff;
	font-size: 24rpx;
	position: fixed;
	left: 0;
	bottom: 15%; 
	border-radius: 0 16rpx 16rpx 0;
}
.show-modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.7);
}
.modal-content {
  width: 80%;
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  margin: 0 auto;
  background: #fff;
  border-radius: 15rpx;
  padding-bottom: 110rpx;
}
.modal-head {
  padding: 30rpx 30rpx 70rpx 30rpx;
  border-bottom: 1px solid #eee;
  text-align: center;
}
.modal-title {
  display: block;
  margin-bottom: 30rpx;
}
.modal-desc {
  color: #666;
  font-size: 26rpx;
}
.phone-num {
  display: block;
  line-height: 125rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
  color: #e40011;
  font-size: 30rpx;
}
.modal-btn {
  position: absolute;
  bottom: 0; 
  width: 100%;
  line-height: 110rpx;
  background: #fff;
  font-size: 30rpx;
  border-radius: 0 0 15rpx 15rpx;
}
.modal-btn::after {
  border: none;
}
.touch-cacel {
  background: #e40011;
  color: #fff;
}